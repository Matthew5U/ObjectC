        div.selector,
        div.checker,
        div.radio {
            display: -moz-inline-box;
            display: inline-block;

            vertical-align: middle;
        }

        div.selector:focus,
        div.checker:focus,
        div.radio:focus {
            outline: 0;
        }

        div.selector, div.selector *,
        div.checker, div.checker *,
        div.radio, div.radio * {
            padding: 0;
            margin: 0;
        }

