        /**
        * Single Product Price, including microdata for SEO
        *
        * @author      WooThemes
        * @package     WooCommerce/Templates
        * @version     1.6.4
        */

        if ( ! defined( 'ABSPATH' ) ) {
            exit; // Exit if accessed directly
        }

        global $product;
        ?>
        <div class="product-price" itemprop="offers" itemscope itemtype="http://schema.org/Offer">

            <p class="price"><span class="priceLabel"><?php _e('Cena', 'clothing'); ?></span> <?php echo $product->get_price_html(); ?></p> // gdy zarejestrujemy tlumaczenie. Podstawnienie _e

