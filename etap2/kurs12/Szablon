            <meta itemprop="priceCurrency" content="<?php echo get_woocommerce_currency(); ?>" />
            <link itemprop="availability" href="http://schema.org/<?php echo $product->is_in_stock() ? 'InStock' : 'OutOfStock'; ?>" />

