    35. W functions.php dodajemy kod odopwiedzialny za genreowanie kodu so sldiera
        ______________________________KOD_____________________________________________________________________________________________________________________________________________________________________________________________
        // REGISTER SLIDE POST TYPE
        function add_slide_type() {
            register_post_type('slide',
                array(
                    'labels' => array(
                        'name'          => __('Slider'),
                        'singular_name' => __('Slider'),
                        'add_new'       => __('Dodaj nowy slajd'),
                        'add_new_item'  => __('Dodaj nowy slajd'),
                        'edit_item'     => __('Edytuj slajd')
                    ),
                    'public'    => true,
                    'show_ui'   => true,
                    'query_var' => true,
                    'supports'  => array(
                        'title', // dodajemy tytul
                        'thumbnail' // dodawanie miniaturki
                    )
                )
            );
        }

        add_action('init', 'add_slide_type'); // zarejestrowanie

        // DISPLAY SLIDES
        function clothing_slider() { // <- fucnkji uzywamy w header jesli jestesmy na stronie glownejj

            $slides = get_posts('post_type=slide&posts_per_page=-1'); // pobieramy posty do zmiennej slide

            if(empty($slides)) return;

            $output = '<ul class="bxslider">' . PHP_EOL;

            foreach($slides as $slide) {
                $output .= '<li style="background-image: url(' . wp_get_attachment_url(get_post_thumbnail_id($slide->ID)) . ');"></li>' . PHP_EOL; // jeden konkrenty dodany post i pobranie adesu url
            }

            $output .= '</ul>';

            echo $output;

        }
        ______________________________________________________________________________________________________________________________________________________________________________________________________________________________

