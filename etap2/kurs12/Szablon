    31. Do functions.php dodajemy kod
        ______________________________KOD_____________________________________________________________________________________________________________________________________________________________________________________________
        // GET CART TOTAL
        function clothing_get_cart_total() {

            global $woocommerce;

            return $woocommerce->cart->cart_contents_count;

        }

        // GET CART URL
        function clothing_get_cart_url() {

            global $woocommerce;

            echo $woocommerce->cart->get_cart_url();

        }

        // ADD CART TOTAL TO OBJECT
        function clothing_add_ajax_cart_count($args) {

            $args['cart_count'] = clothing_get_cart_total();

            return $args;

        }

        add_filter('add_to_cart_fragments', 'clothing_add_ajax_cart_count');

        // SET RELATED PRODUCTS NUMBER
        function clothing_change_related_products_number($args) {

            $args['posts_per_page'] = 5;

            return $args;

        }

        add_filter('woocommerce_output_related_products_args', 'clothing_change_related_products_number'); // filtr obliczzajacy ile mamy w koszyku
        ______________________________________________________________________________________________________________________________________________________________________________________________________________________________

