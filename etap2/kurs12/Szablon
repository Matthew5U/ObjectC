        ______________________________KOD_____________________________________________________________________________________________________________________________________________________________________________________________
        // *--------- PLACEHOLDERS ---------*
        %button {
            display: inline-block;
            height: 43px;
            padding: 0 20px;
            margin: 0;
            border: none;
            background-color: #000;

            cursor: pointer;

            font: 300 14px/43px $dosis;
            text-align: left;
            color: #fff !important;

            @include transition($props: opacity);

            &:hover {
                opacity: 0.85;
            }
        }

        %addToCartButton {
            padding-right: 50px;
            background: #4e7c7f url(../images/add_to_cart_icon.png) right center no-repeat;

            @extend %button;
        }

        // *--------- STYLES ---------*
        .button { // wszystkie lelemny a ktore beda mialy klasse button beda mialy ten styl
            @extend %button;
        }
