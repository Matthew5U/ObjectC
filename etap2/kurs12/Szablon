        // REGISTER WIDGETS
        function clothing_widgets() {

            register_sidebar(array( // dodajmey sidebar
                'name' => 'Footer - Linki', // fotter to linki
                'before_widget' => '<div class="box links">', // wyswietlamy div
                'after_widget' => '</div>', // domykamy
                'before_title' => '<h3>',// dodajemy tytul
                'after_title' => '</h3>'
            ));

        }

        add_action('widgets_init', 'clothing_widgets'); // na akcje widgets init dodajemy nasza funckje
