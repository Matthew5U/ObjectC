    18. W pliku functions.php dodajem 
        ______________________________KOD_____________________________________________________________________________________________________________________________________________________________________________________________
        // CHANGE PRODUCT ADD TO CART POSITION
        remove_action('woocommerce_single_product_summary', 'woocommerce_template_single_add_to_cart', 30);
        add_action('woocommerce_single_product_summary', 'woocommerce_template_single_add_to_cart', 50);

        // CHANGE PRODUCT META POSITION
        remove_action('woocommerce_single_product_summary', 'woocommerce_template_single_meta', 40);
        add_action('woocommerce_single_product_summary', 'woocommerce_template_single_meta', 5);

        // CHANGE PRODUCT RATING POSITION
        remove_action('woocommerce_single_product_summary', 'woocommerce_template_single_rating', 10); // przycisk ocena
        add_action('woocommerce_single_product_summary', 'woocommerce_template_single_rating', 20);

        // CHANGE PRODUCT TABS POSITION
        remove_action('woocommerce_after_single_product_summary', 'woocommerce_output_product_data_tabs', 10); //kod odpoweidzialny za usuniecie zakladek
        add_action('woocommerce_single_product_summary', 'woocommerce_output_product_data_tabs', 50);
        
        // REMOVE PRODUCT EXCERPT
remove_action('woocommerce_single_product_summary', 'woocommerce_template_single_excerpt', 20); // wylaczenie opisu
        ______________________________________________________________________________________________________________________________________________________________________________________________________________________________

