    38. W index.php dodajemy wpisy
        ______________________________KOD_____________________________________________________________________________________________________________________________________________________________________________________________
        <?php get_header(); ?>

        <section class="mainContent">
            <div class="centerContent">
                <?php clothing_breadcrumb(); ?>

                <h2 class="pageTitle">Blog</h2>
            </div><!-- /.centerContent -->

        <?php if(have_posts()) : ?>

        <?php while(have_posts()) : the_post(); ?>

            <article class="blogPost <?php if($wp_query->current_post % 2 == 0) : ?>even<?php else: ?>odd<?php endif; ?>">

                <div class="centerContent">

                    <?php if(has_post_thumbnail()) : ?>// jesli miniaturka jest
                    <a href="<?php the_permalink(); ?>">
                        <?php the_post_thumbnail('full', array('class' => 'postThumb')); ?>
                    </a>
                    <?php endif; ?>

                    <div class="postDetails">

                        <h3><a href="<?php the_permalink(); ?>"><?php the_title(); ?></a></h3>

                        <div class="postMeta">
                            <span class="date">
                                <time datetime="<?php the_time('Y-m-d'); ?>"><?php the_time('d.m.Y'); ?></time>
                            </span>
                            <span class="sep">|</span>
                            <span class="author"><?php the_author(); ?></span>
                            <span class="sep">|</span>
                            <span class="categories"><?php the_category(','); ?></span>
                        </div>

                        <div class="postExcerpt">
                            <?php the_content('Czytaj dalej &rarr;'); ?>
                        </div>

                    </div><!-- /.postDetails -->

                </div><!-- /.centerContent -->

            </article>

        <?php endwhile; ?>

            <?php wp_pagenavi(); ?>

        <?php else : ?>

            <p class="empty">Nie dodano jeszcze żadnych wpisów.</p>

        <?php endif; ?>
        </section><!-- /.mainContent -->

        <?php get_footer(); ?>
